#include <iostream>
#include <stdio.h>
#include <conio.h>

using namespace std;

int main() {
	
	int n;
	int i = 1;
	int s = 0;
	cout << "Enter n = "; cin >> n;
	while(i <= n) {
		s += i * i;
		i++;
    }
	cout << "S(" << n << ") = 1^2 + 2^2 + ... + " << n << "^2 = " << s;
	
	getch();
	return 0;
}
