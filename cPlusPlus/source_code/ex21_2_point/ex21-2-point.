#include <iostream>
#include <stdio.h>
#include <conio.h>

using namespace std;

int main() {

	int x = 7;
	int y = 5.6;
	int *Zp;
	
	Zp = &y;
	float b = *Zp;
	cout << "Address of variable x: " << &x << endl;
	cout << "Address of variable y: " << &y << endl;
	cout << "Value of variable Zp: " << Zp << endl;
	cout << "Value of variable point Zp -> : " << b << endl;
	
	getch();
	return 0;
}
